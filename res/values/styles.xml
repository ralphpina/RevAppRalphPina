<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="LanguageSelectorText" parent="AppTheme">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="ScreenTextLarge" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Buttons" >
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/rev_light_orange</item>        
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>    
    </style>
    
    <style name="SelectionHeaders" >
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/rev_light_orange</item>
    </style>
    
    <style name="Answers" >
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/rev_burnt_orange</item> 
    </style>

</resources>
