<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ralphpina.revappralphpina"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.ralphpina.revappralphpina.MainActivity"
            android:label="@string/Language.language" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
            
        </activity>
        <activity
            android:name=".SecurityQuestionsActivity"
            android:label="@string/SecurityQuestion.securityQuestion" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
            
        </activity>
        
        <activity
            android:name=".ConfirmationActivity"
            android:label="@string/SecurityQuestion.confirmation" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
            
        </activity>
        
        <activity
            android:name=".SplashScreen"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
