<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConfirmationActivity" >

    <TextView
        android:id="@+id/textViewConfirmation"
        style="@style/ScreenTextLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/SecurityQuestion.finished" />

    <TextView
        android:id="@+id/textViewSecurityQuestion1"
        style="@style/SelectionHeaders"
        android:layout_alignLeft="@+id/textViewConfirmation"
        android:layout_alignRight="@+id/textViewConfirmation"
        android:layout_below="@+id/textViewConfirmation"
        android:layout_marginTop="16dp"
        android:text="@string/SecurityQuestion.Question1" />

    <TextView
        android:id="@+id/textViewQuestion1"
        style="@style/Answers"
        android:layout_alignLeft="@+id/textViewSecurityQuestion1"
        android:layout_below="@+id/textViewSecurityQuestion1"
        android:layout_marginTop="14dp"
        android:text="@string/SecurityQuestion.question.prefix" />

    <TextView
        android:id="@+id/textViewAnswer1"
        style="@style/Answers"
        android:layout_alignLeft="@+id/textViewSecurityQuestion2"
        android:layout_below="@+id/textViewQuestion1"
        android:layout_marginTop="16dp"
        android:text="@string/SecurityQuestion.answer.prefix" />

    <TextView
        android:id="@+id/textViewSecurityQuestion2"
        style="@style/SelectionHeaders"
        android:layout_alignLeft="@+id/textViewQuestion1"
        android:layout_below="@+id/textViewAnswer1"
        android:layout_marginTop="21dp"
        android:text="@string/SecurityQuestion.Question2" />
    
    <TextView
        android:id="@+id/textViewQuestion2"
        style="@style/Answers"
        android:layout_alignLeft="@+id/textViewSecurityQuestion2"
        android:layout_below="@+id/textViewSecurityQuestion2"
        android:layout_marginTop="16dp"
        android:text="@string/SecurityQuestion.question.prefix" />

    <TextView
        android:id="@+id/textViewAnswer2"
        style="@style/Answers"
        android:layout_alignLeft="@+id/textViewQuestion2"
        android:layout_below="@+id/textViewQuestion2"
        android:layout_marginTop="14dp"
        android:text="@string/SecurityQuestion.answer.prefix" />

    <Button
        android:id="@+id/buttonRestart"
        style="@style/Buttons"
        android:text="@string/Button.restart" />

</RelativeLayout>